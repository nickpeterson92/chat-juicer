{
  "name": "chat-juicer-electron",
  "version": "1.0.0",
  "description": "Electron wrapper for Chat Juicer Azure OpenAI bot",
  "main": "electron/main.js",
  "scripts": {
    "prestart": "node scripts/validate.js",
    "start": "npm run build && node scripts/launch.js",
    "dev": "node scripts/launch.js --dev",
    "build": "vite build",
    "inspect": "node scripts/launch.js --inspect",
    "setup": "npm install && node scripts/setup.js",
    "lint": "biome check electron/*.js scripts/*.js",
    "lint:fix": "biome check electron/*.js scripts/*.js --write",
    "format": "biome format electron/*.js scripts/*.js --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.14",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "electron": "^38.1.2",
    "electron-vite": "^4.0.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.10",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.8"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dompurify": "^3.3.0",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.25",
    "lottie-web": "^5.13.0",
    "marked": "^16.4.1",
    "marked-footnote": "^1.4.0",
    "mermaid": "^11.12.0"
  }
}
