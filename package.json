{
  "name": "chat-juicer-electron",
  "version": "1.0.0",
  "description": "Electron wrapper for Chat Juicer Azure OpenAI bot",
  "main": "src/frontend/main.js",
  "scripts": {
    "prestart": "node scripts/validate.js",
    "start": "npm run build && node scripts/launch.js",
    "dev": "node scripts/launch.js --dev",
    "generate:models": "node -e \"const {execSync}=require('child_process');const p=process.platform==='win32'?'.juicer/Scripts/python.exe':'.juicer/bin/python';execSync(p+' scripts/generate-model-metadata.py',{stdio:'inherit'})\"",
    "build": "vite build",
    "build:web": "BUILD_MODE=web vite build && mv dist/web/src/frontend/ui/index.html dist/web/index.html && rm -rf dist/web/src && sed -i'.bak' 's|\\.\\.\\/\\.\\.\\/\\.\\.\\/assets|assets|g' dist/web/index.html && rm -f dist/web/index.html.bak",
    "dev:web": "BUILD_MODE=web vite",
    "preview:web": "vite preview --outDir dist/web",
    "deploy:web": "npm run build:web && npx wrangler pages deploy dist/web --project-name=chat-juicer",
    "inspect": "node scripts/launch.js --inspect",
    "setup": "npm install && node scripts/setup.js",
    "lint": "biome check src/frontend/*.js scripts/*.js",
    "lint:fix": "biome check src/frontend/*.js scripts/*.js --write",
    "format": "biome format src/frontend/*.js scripts/*.js --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.14",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "axe-core": "^4.11.0",
    "electron": "^38.1.2",
    "electron-vite": "^4.0.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.10",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.8"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "animejs": "^4.2.2",
    "dompurify": "^3.3.0",
    "katex": "^0.16.25",
    "lottie-web": "^5.13.0",
    "marked": "^16.4.1",
    "marked-footnote": "^1.4.0",
    "mermaid": "^11.12.0",
    "msgpack-lite": "^0.1.26",
    "pdfjs-dist": "^4.0.379",
    "shiki": "^3.20.0"
  }
}
