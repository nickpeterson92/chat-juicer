# Chat Juicer - Development Environment
# This file contains development-specific defaults
# Override in .env.local for your personal settings

# Environment
APP_ENV=development
DEBUG=true
CONFIG_HOT_RELOAD=true

# Development database (local PostgreSQL container)
DATABASE_URL=postgresql://chatjuicer:localdev@localhost:5433/chatjuicer

# Smaller connection pools for development
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=5
MCP_POOL_SIZE=2

# Auth (relaxed for local development)
ALLOW_LOCALHOST_NOAUTH=true
# JWT_SECRET should be set in .env or .env.local (not tracked)

# HTTP logging (enable when debugging API issues)
HTTP_REQUEST_LOGGING=false
