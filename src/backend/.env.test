# Chat Juicer - Test Environment
# Used by pytest and CI/CD pipelines

# Environment
APP_ENV=test
DEBUG=false
CONFIG_HOT_RELOAD=false

# Test database (separate from development)
DATABASE_URL=postgresql://chatjuicer:localdev@localhost:5433/chatjuicer_test

# Minimal pools for faster test startup
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=2
MCP_POOL_SIZE=1

# Auth (test defaults)
ALLOW_LOCALHOST_NOAUTH=true
# JWT_SECRET uses code default in tests; override in CI if needed
ACCESS_TOKEN_EXPIRES_MINUTES=5
REFRESH_TOKEN_EXPIRES_DAYS=1

# Disable external services in tests
HTTP_REQUEST_LOGGING=false

# Use local file storage for tests
FILE_STORAGE=local
FILE_STORAGE_PATH=data/test_files
